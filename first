#include <stdio.h>
int main()
{   int note500,note100,note50,note20,note10,note5,note2,note1;
    int amount;
    note500=note100=note50=note20=note10=note5=note2=note1=0;
    scanf("%d",&amount);
    if(amount>=500){
        note500=amount/500;
        amount=amount-(500*note500);
    }
    if(amount>=100){
        note100=amount/100;
        amount=amount-(100*note100);
    }
    if(amount>=50){
        note50=amount/50;
        amount=amount-(50*note50);
       
    }
    if(amount>=20){
        note20=amount/20;
        amount=amount-(20*note20);
    }
    if(amount>=10){
        note10=amount/10;
        amount=amount-(10*note10);
    }
    if(amount>=5){
        note5=amount/5;
        amount=amount-(5*note5);
    }
    if(amount>=2){
        note2=amount/2;
        amount=amount-(2*note2); }
    note1=amount;
    printf("500:%d\n",note500);
    printf("100:%d\n",note100);
    printf("50:%d\n",note50);
    printf("20:%d\n",note20);
    printf("10:%d\n",note10);
    printf("5:%d\n2:%d\n1:%d\n",note5,note2,note1);
return 0;
}
